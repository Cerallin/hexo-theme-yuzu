<div class="tags-wrap">
  <div id='tag_cloud' class="tags">
    <% site.tags.map(function(tag){  %>
    <a href="#<%= tag.name %>" title="<%= tag.name %>" rel="<%= tag.length %>">
      #
      <%= tag.name %></a>
    <% }) %>
  </div>

  <!-- 标签列表 -->

  <% site.tags.map(function(tag){  %>
  <div class="one-tag-list">
    <p class="tag-text" id="<%= tag.name %>">
      <%= tag.name %></p>
    <% tag.posts.map(function(post){  %>
    <p class="post-preview">
      <span class="tagItem-date">
        <%= post.date.format('YYYY-MM-DD') %></span>
      <!-- <a href="<%- config.root %><%- post.path %>"></a> -->
      <a href="<%- post.path %>">
        <span class="post-title">
          <%- post.title || "Untitled" %>
        </span>
      </a>
    </p>
    <% }) %>
  </div>
  <% }) %>
</div>