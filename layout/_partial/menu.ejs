<div class="menu-nav">
  <% for (let name in config.menu) { %>
  <% let item = config.menu[name] %>
  <div class="menu-nav-item">
    <div class="menu-nav-item-tit">
      <% if (item.widget == "Archives") { %>
        <a href="<%- url_for('/' + config.archive_dir) %>">
      <% } else if (item.widget == "Tags") { %>
        <a href="<%- url_for('/' + config.tag_dir) %>">
      <% } else { %>
          <a href="<%- url_for(`/${config.category_dir}/${item.name}/`) %>">
      <% } %>
      <span><%= name %></span></a>
    </div>
    <div class="menu-nav-item-cont <%- item.widget.toLowerCase() %>">
      <%- partial('_widget/' + item.widget, {
        category: item.name,
        cat_link: item.link,
        showNum: item.show_num || 3
      }) %>
    </div>
  </div>
  <% } %>
</div>