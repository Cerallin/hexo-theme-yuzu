<!DOCTYPE html>
html(lang= config.language)
  | !{ partial('_partial/head', null, {cache: false}) }

  body
    .loading-wrapper(data-loading)
      .loading
        span
        span
        span

    .page(data-filter)
      .head(data-show)
        | !{ partial('_partial/header', null, {cache: true}) }
        | !{ partial('_partial/head-bar') }

      .main
        | !{ body }

      footer.footer-nav
        .footer
          #back-top.back-top(title="Back to top")
            i.icon.icon-chevron-bar-up
          | !{ partial('_partial/footer', null, {cache: true}) }

      | !{ partial('_partial/after-footer', null, {cache: true}) }

    #search-modal.search-modal
      .card
        .card-head
          .search-box
            input#search-input.search-input(placeholder= __('search.search'))
            #search-button.search-button
              .icon.icon-search
          .close-button
            .icon.icon-x
        .card-body
          .search-count
            = __('search.total')
            |
            span#search-count-num=0
            |
            = __('search.counts')
          #search-result.search-result
