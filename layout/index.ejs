<%- partial('_partial/menu', {pagination: 2, index: true}) %>

<div id="index-content" class="content">

  <% page.posts.each(function(post){ %>
  <%- partial('_partial/article-list-item', {post: post, condense: false}) %>
  <% }) %>

  <div class="pagination">
    <% if (page.prev){ %>
    <div class="nav-link prev">
      <i class="icon icon icon-chevron-left"></i>
      <a href="<%- config.root %><%- page.prev_link %>">
        <span>Prev</span>
      </a>
    </div>
    <% } %>
    <% if (page.next){ %>
    <div class="nav-link next">
      <a href="<%- config.root %><%- page.next_link %>">
        <span>Next</span>
      </a>
      <i class="icon icon-chevron-right"></i>
    </div>
    <% } %>

  </div>
</div>