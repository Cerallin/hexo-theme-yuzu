.main[data-page='home']
  display: grid
  grid-template-columns: 20% 1fr
  grid-column-gap: 8%

  @media (max-width: 768px)
    grid-template-columns: 1fr

.content
  width: 100%
  margin: 0 auto

  img
    max-width: 100%
    height: auto
    display: inline-block
    vertical-align: middle

  .post-item
    p
      text-indent: 0

    & + .post-item
      border-top: 1px solid
      border-color(border-gray, border-gray-light, border-gray-dark)
