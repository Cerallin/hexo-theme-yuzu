size = 20px

.loading-wrapper
  display: flex
  justify-content: center
  align-content: center
  position: fixed
  width: 100%
  height: 100%
  align-items: center

  &[data-loading=false]
    display: none

.page[data-filter=true]
  filter: blur(2px)

.loading
  height: size
  margin: 0 auto

  span
    display: inline-block
    width: size
    height: 100%
    margin-right: (size / 3)
    border-radius: 50%
    background-color(primary-gray, primary-gray-light, primary-gray-dark)
    animation: load 1.04s ease infinite

  span:last-child
    margin-right: 0px

  @keyframes load
    0%
      opacity: 1

    100%
      opacity: 0

  span:nth-child(1)
    animation-delay: 0.13s

  span:nth-child(2)
    animation-delay: 0.26s

  span:nth-child(3)
    animation-delay: 0.39s

  span:nth-child(4)
    animation-delay: 0.52s

  span:nth-child(5)
    animation-delay: 0.65s
