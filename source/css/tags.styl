.tags-wrap{
  max-width: 850px;
  margin: 0 auto;
  padding-top: 40px;
  color: dark-gray;
  .tags{
    padding-bottom: 5px;
    a{
      padding-right: 10px;
      font-size: 16px;
      color: #aaa;
      line-height: 25px;
      &:hover{
        color: dark-gray;
      }
    }
  }
  .one-tag-list{
    .tag-text{
      margin: 10px 0px;
      font-size: 22px;
      color: dark-gray;
    }
    .post-preview{
      line-height: 35px;
      .tagItem-date{
        display: block;
        float: left;
        color: #aaa;
      }
      a{
        display: inline-block;
        text-indent: 2em;
        color: dark-gray;
      }
    }
  }
}