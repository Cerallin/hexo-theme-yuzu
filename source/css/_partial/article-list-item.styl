.article-entry
  .article-more-link
    font-family: default-font-family
    text-indent: 0
    font-size: default-font-size
    padding-top: 0
    padding-bottom: 5px

  h1, h2, h3
    title()

  h4
    subtitle()

  h5
    subsubtitle()

  h3 + h4, h4 + h5
    padding-top: 0

  // 3-line table
  &>table, div>table
    line-height: 2em
    border-top: 2px solid
    border-bottom: 2px solid
    border-collapse: collapse
    border-color(border-table, border-table-light, border-table-dark)
    margin-bottom: 1em

    thead
      line-height: 3em
      border-bottom: 1px solid
      border-color(border-table, border-table-light, border-table-dark)

      th
        padding: 0 0.5em

    td
      padding: 0.25em 0.5em
      white-space: nowrap

    td:first-child, th:first-child
      padding-left: 1em

    td:last-child
      padding-right: 1em

  .figure-container
    margin-top: 1em

    p
      text-indent: 0

      img
        width: 80%
        margin-left: 10%
        text-align: center

  figure
    margin-top: 1em
    margin-bottom: 1em

    figcaption
      display: none

    img
      width: 80%
      margin-left: 10%
      text-align: center

    video
      width: 50%
      margin-left: 25%
      text-align: center

.article-entry.condense
  .article-more-link
    font-size: info-font-size

  h1, h2, h3
    font-size: content-font-size

  ul, li
    font-size: default-font-size

.post-item
  padding: 40px 0
  margin: auto
  font-family: 'Noto Serif', 'Noto Serif SC', serif

  .post-item-head
    .post-item-title
      margin: 0px 0px 10px
      font-size: large-font-size
      font-family: default-font-family

      a
        position: relative
        display: inline-block
        vertical-align: middle
        overflow: hidden
        text-decoration: none
        font-weight: 200
        text-color(primary-color, primary-color-light, primary-color-dark)

  .post-item-datetag
    margin-bottom: 10px
    info-link-text()

    .post-item-date
      display: inline-block

      .post-time
        font-family: 'Raleway', Georgia, 'Times New Roman', Times, serif

    .post-item-tag
      display: inline-block
      margin-left: 20px
      font-family: default-font-family

  p
    content-text()

  blockquote
    quoted-text(content-font-size)

  code
    text-color(primary-color, primary-color-light, primary-color-dark)
    vertical-align: middle
    padding: 3px 0.4em
    border-radius: 3px

    if (hexo-config('smooth_corner'))
      smooth-corner(5)

.post-item.condense
  padding: 10px 0

  & + .post-item
    padding-top: 0

  .post-item-head
    .post-item-title
      font-size: title-font-size

  .post-item-datetag
    font-size: info-font-size

  p
    font-size: default-font-size
    padding-top: 2px
    padding-bottom: 5px
