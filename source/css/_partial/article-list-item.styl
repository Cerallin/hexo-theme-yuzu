.article-entry
  .article-more-link
    font-family: 'Noto Sans SC'
    text-indent: 0
    font-size: default-font-size

  h1, h2, h3
    padding: 0.5rem 0 1rem 0
    font-size: title-font-size
    font-weight: 600

  h4
    padding: 0.5rem 0 1rem 0
    font-size: content-font-size
    font-weight: 600

  // 3-line table
  .table-container
    width: 100%
    overflow-x: scroll

    p
      text-indent: 0

  .table-container table, >table, div>table
    line-height: 2em
    border-top: 2px solid #000
    border-bottom: 2px solid #000
    border-collapse: collapse
    margin-bottom: 1em

    thead
      line-height: 3em
      border-bottom: 1px solid #000

    td
      padding-bottom: 0.25em
      padding-top: 0.25em
      white-space: nowrap

    td:first-child, th:first-child
      padding-left: 1em

    td:last-child
      padding-right: 1em

  .figure-container
    margin-top: 1em

    p
      text-indent: 0

      img
        width: 80%
        margin-left: 10%
        text-align: center

  figure
    margin-top: 1em

    figcaption
      display: none

    img
      width: 80%
      margin-left: 10%
      text-align: center

.article-entry.condense
  .article-more-link
    font-size: info-font-size

  h1, h2, h3
    font-size: content-font-size

  ul, li
    font-size: default-font-size

.post-item
  padding: 40px 0
  margin: auto
  font-family: 'Noto Serif', 'Noto Serif SC', serif

  .post-item-head
    .post-item-title
      margin: 0px 0px 10px
      font-size: large-font-size
      font-family: 'Noto Sans', sans-serif

      a
        position: relative
        display: inline-block
        vertical-align: middle
        overflow: hidden
        color: secondary-color
        text-decoration: none
        font-weight: normal

  .post-item-datetag
    margin-bottom: 10px
    info-link-text()

    .post-item-date
      display: inline-block

      .post-time
        font-family: 'Raleway', Georgia, 'Times New Roman', Times, serif

    .post-item-tag
      display: inline-block
      margin-left: 20px
      font-family: 'Noto Sans SC', sans-serif

  p
    content-text()

  blockquote>p
    quoted-text()

.post-item.condense
  padding: 10px 0

  .post-item-head
    .post-item-title
      font-size: title-font-size

  .post-item-datetag
    font-size: info-font-size

  p
    font-size: default-font-size
    padding-top: 2px
    padding-bottom: 5px
  