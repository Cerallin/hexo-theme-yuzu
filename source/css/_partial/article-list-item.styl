.article-entry
  .article-more-link
    font-family: default-font-family
    text-indent: 0
    font-size: default-font-size
    padding-top: 0
    padding-bottom: 5px

  h1, h2, h3
    title()

  h4
    subtitle()

  h5
    subsubtitle()

  h3 + h4, h4 + h5
    padding-top: 0

  &[id^='eq:']>table, div[id^='eq:']>table
    width: 100%

    tbody
      width: 100%

      tr
        width: 100%
        position: relative
        display: flex
        justify-content: flex-end
        align-items: center
        vertical-align: text-bottom

        td:first-child
          width: 100%
          position: absolute

  // 3-line table, but ignore equations aligned as table
  &:not([id^='eq:'])>table, div:not([id^='eq:'])>table
    line-height: 2em
    border-top: 2px solid
    border-bottom: 2px solid
    border-collapse: collapse
    border-color(border-table, border-table-light, border-table-dark)
    margin-bottom: 1em

    thead
      line-height: 3em
      border-bottom: 1px solid
      border-color(border-table, border-table-light, border-table-dark)

      th
        padding: 0 0.5em

    td
      padding: 0.25em 0.5em
      white-space: nowrap

    td:first-child, th:first-child
      padding-left: 1em

    td:last-child
      padding-right: 1em

  .figure-container
    margin-top: 1em

    p
      text-indent: 0

      img
        width: 80%
        margin-left: 10%
        text-align: center

  figure
    margin-top: 1em
    margin-bottom: 1em
    position: relative

    figcaption
      display: none

    img
      width: 80%
      margin-left: 10%
      text-align: center

    video
      width: 50%
      margin-left: 25%
      text-align: center

.post-item
  padding: 40px 0
  margin: auto
  font-family: 'Noto Serif', 'Noto Serif SC', serif

  .post-item-title
    margin: 0px 0px 10px
    font-size: large-font-size
    font-family: default-font-family

    a
      position: relative
      display: inline-block
      vertical-align: middle
      overflow: hidden
      text-decoration: none
      font-weight: 200
      text-color(primary-color, primary-color-light, primary-color-dark)

  .post-item-datetag
    margin-bottom: 10px
    info-link-text()

    .post-item-date
      display: inline-block

      .post-time
        font-family: 'Raleway', Georgia, 'Times New Roman', Times, serif

  p
    content-text()

  blockquote
    quoted-text(content-font-size)

  code
    text-color(primary-color, primary-color-light, primary-color-dark)
    vertical-align: middle
    padding: 3px 0.4em
    border-radius: 3px

    if (hexo-config('smooth_corner'))
      smooth-corner(5)

.post-item[data-condense]
  padding: 0.5em 0

  &:first-child
    padding-top: 0

  & + .post-item
    border-top: 1px solid
    border-color(border-color, border-color-light, border-color-dark)

  .post-item-title
    font-size: title-font-size
    margin: 0

  .post-item-datetag
    font-size: info-font-size
    margin-bottom: 0

  p
    line-height: 1.25em
    font-family: initial
    font-size: default-font-size

  .article-entry
    .article-more-link
      font-size: info-font-size

    h1, h2, h3
      font-size: content-font-size

    ul, li
      font-size: default-font-size
