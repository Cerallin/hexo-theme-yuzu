.post-widget
  info-text()
  padding-top: 1em
  width: 20%
  float: right

  .post-toc-wrap
    h4
      color: secondary-gray
      padding-bottom: 0.25em
      margin-bottom: 0.75em
      border-bottom: 1px solid border-gray

    .post-toc
      .post-toc-item
        line-height: 1.75em
        margin-left: 1em
        text-indent: -1em
        width: 100%
        white-space: normal
