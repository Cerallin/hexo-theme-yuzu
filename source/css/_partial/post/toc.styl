.post-widget
  float: right
  padding-top: 40px
  width: 20%
  color: secondary-gray

  .post-toc-wrap
    h4
      padding-bottom: 10px
      border-bottom: 1px solid #eee

    .post-toc
      padding-top: 10px

      .post-toc-item
        width: 100%
        white-space: normal
        margin-left: 1em
        text-indent: -1em
        padding: 5px 0px

        a
          font-size: default-font-size
          color: secondary-color
          line-height: 24px
