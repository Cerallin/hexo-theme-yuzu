.post-widget
  info-text()
  padding-top: 1em
  width: 20%
  float: right

  .post-toc-wrap
    h4
      padding-bottom: 0.25em
      margin-bottom: 0.75em
      border-bottom: 1px solid
      border-color(border-gray, border-gray-light, border-gray-dark)
      text-color(secondary-gray, secondary-gray-light, secondary-gray-dark)

    .post-toc
      .post-toc-item
        line-height: 1.75em
        margin-left: 1em
        text-indent: -1em
        width: 100%
        white-space: normal
