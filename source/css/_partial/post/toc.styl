.post-widget
  @media (max-width: 768px)
    display: none

  info-text()
  max-width: 150px
  position: sticky
  align-self: flex-start
  justify-self: flex-end
  margin-top: 16px
  top: 65px
  right: 0

  .post-toc-toggle
    primary-link-text()
    font-size: info-font-size

  .post-toc-wrap
    margin-bottom: 1em

    h4
      padding-bottom: 0.25em
      margin-bottom: 0.75em
      border-bottom: 1px solid
      border-color(border-gray, border-gray-light, border-gray-dark)
      text-color(secondary-gray, secondary-gray-light, secondary-gray-dark)

    .post-toc
      margin-left: -0.5em

      .post-toc-child
        padding-top: 0.5em


      .post-toc-item
        line-height: 1.25em
        padding: 0 0 0.5em 0.5em
        white-space: normal

        &:last-child
          padding-bottom: 0

        &[data-active] > .post-toc-link
          text-color(primary-color, primary-color-light, primary-color-dark)

        .post-toc-link
          display: grid
          grid-template-columns: auto 1fr
          grid-gap: 3px
