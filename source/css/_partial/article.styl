.post
  padding: 40px 0
  margin: auto
  font-family: 'Noto Serif', 'Noto Serif SC', sans-serif

  .post-head
    .post-title
      margin: 0px 0px 10px

      a
        position: relative
        display: inline-block
        vertical-align: middle
        overflow: hidden
        color: primary-trans
        text-decoration: none
        font-weight: normal

  .post-datetag
    margin-bottom: 10px
    color: primary-gray
    font-size: info-font-size

    .post-date
      display: inline-block

      .post-time
        font-family: 'Raleway', Georgia, 'Times New Roman', Times, serif

    .post-tag
      display: inline-block
      margin-left: 20px

      a
        color: primary-gray
        text-decoration: none

  .post-cc
    color: secondary-gray
    margin-bottom: 20px
    font-size: default-font-size

  p
    word-break: break-word
    text-align: justify
    padding-top: 5px
    padding-bottom: 10px
    font-size: content-font-size
    text-indent: 2em

  blockquote>p
    color: info-gray

  .table-container
    margin-left: auto
    margin-right: auto