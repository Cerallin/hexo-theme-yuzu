.post
  max-width: 100%
  margin: auto
  font-family: 'Noto Serif', 'Noto Serif SC', sans-serif

  .post-head
    .post-title
      margin: 0px 0px 1em
      font-size: large-font-size

      a
        position: relative
        display: inline-block
        vertical-align: middle
        overflow: hidden
        text-decoration: none
        font-weight: 400
        text-color(primary-color, primary-color-light, primary-color-dark)

  .post-datetag
    info-text()
    margin-bottom: 10px

    .post-date
      display: inline-block
      margin-right: 10px

      .post-time
        font-family: 'Raleway', Georgia, 'Times New Roman', Times, serif

    .post-tag
      display: inline-block
      margin: 0 10px

      a
        text-color(primary-gray, primary-gray-light, primary-gray-dark)
        text-decoration: none

    .post-visit
      display: inline-block
      margin: 0 10px

  .post-word-count
    margin-bottom: 0.25em

  .post-cc
    primary-link-text()
    margin-bottom: 1.25em

  p
    content-text()

    code
      text-color(primary-color, primary-color-light, primary-color-dark)
      vertical-align: middle
      padding: 3px 0.4em
      border-radius: 3px

      if (hexo-config('smooth_corner'))
        smooth-corner(5)

  blockquote
    quoted-text(default-font-size)
    quoted-with-sign(default-font-size)
    padding-bottom: 0.5em

  counter-reset: table-num

  >table, div>table
    min-width: 60%
    margin-top: 1.5em
    margin-bottom: 1em
    margin-left: auto
    margin-right: auto

  caption
    font-size: default-font-size
    font-weight: 600
    text-align: center

  counter-reset: figure-num

  figure
    figcaption
      font-size: default-font-size
      font-weight: 600
      text-align: center
      display: block
      margin: 0.5em auto 1.5em auto
      width: 80%
