content-text()
  line-height: 1.5em
  text-indent: 2em
  text-align: justify
  font-size: content-font-size
  font-family: default-font-family
  font-weight: 400
  word-break: break-word
  padding-top: 0.25em
  padding-bottom: 0.5em

primary-link-text()
  color: primary-color
  font-size: default-font-size

info-link-text()
  color: primary-gray
  font-size: default-font-size

info-text()
  color: primary-gray
  font-size: info-font-size

quoted-text()
  padding-bottom: 0.5em

  p
    color: secondary-color
    text-indent: 0

    quote-sign()
      font-family: fantasy
      font-size: 1.5 * content-font-size

    &:before
      content: '“'
      padding-right: 0.25em
      quote-sign()

    &:after
      content: '”'
      padding-left: 0.25em
      quote-sign()
