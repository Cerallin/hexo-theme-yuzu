content-text()
  line-height: 1.5em
  text-indent: 2em
  text-align: justify
  font-size: content-font-size
  font-family: content-font-family
  font-weight: 400
  word-break: break-word
  padding-top: 0.25em
  padding-bottom: 0.5em

fin-text()
  text-indent: 0
  margin: 1em 0 0.5em 0
  font-weight: 600

warning-text()
  text-color(#ff542d, #ff542d, #ffcf76)
  font-size: title-font-size

  a
    text-color(primary-color, primary-color-light, primary-color-dark)

    &:hover
      text-color(#ff542d, #ff542d, #ffcf76)

banner-text()
  text-indent: 0
  text-align: center
  margin: 2em 0 1.5em 0

primary-link-text()
  text-color(primary-color, primary-color-light, primary-color-dark)
  font-size: default-font-size

info-link-text()
  text-color(primary-gray, primary-gray-light, primary-gray-dark)
  font-size: default-font-size

info-text()
  text-color(primary-gray, primary-gray-light, primary-gray-dark)
  font-size: info-font-size

quoted-text(size)
  p
    text-indent: 0
    text-color(secondary-color, secondary-color-light, secondary-color-dark)
    font-size: size

    quote-size = 1.5 * size

    padding-left: quote-size
    padding-right: quote-size

    &:before
      quote-sign()
      font-size: quote-size

      offset = 0.1

      margin-left: (-1 - offset) * quote-size
      margin-right: offset * quote-size

text-align-control($attr, $option)
  &[{$attr}={$option}]
    text-align: $option

    & + figcaption
      text-align: $option
